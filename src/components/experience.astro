---
interface Props {
  email: string;
  name: string;
  date: string;
  experience: string;
}
const { email, name, date, experience } = Astro.props;
---

<div
  class="bg-[#242728] border-[0.4px] border-solid border-[rgb(131,130,130)] mt-3"
>
  <div class="px-4 pt-4 pb-4">
    <div class="float-right text-white mt-3">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        fill="currentColor"
        class="bi bi-three-dots-vertical"
        viewBox="0 0 16 16"
      >
        <path
          d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0"
        ></path>
      </svg>
    </div>
    <div class="flex gap-2">
      <div
        class="flex translate-y-2 items-center justify-center rounded-full bg-[#B3B3B3] size-8"
      >
        {email}
      </div>
      <div>
        <p class="text-[1.45rem] text-white">{name}</p>
        <p class="text-white">{date}</p>
      </div>
    </div>
    <p class="text-white text-[1.4rem] pt-3">
      {experience}
    </p>
  </div>
</div>
